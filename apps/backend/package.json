{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun run dist/index.js",
    "build": "NODE_ENV=production bun build src/index.ts --target=bun --minify-whitespace --minify-syntax --outdir=./dist --sourcemap",
    "build:c": "NODE_ENV=production bun build src/index.ts --compile --external=pg --minify-whitespace --minify-syntax --target=bun --outfile=./dist/server",
    "type-check": "tsc --noEmit",
    "lint": "bunx biome lint",
    "drizzle:studio": "bunx drizzle-kit studio --verbose --port 5000"
  },
  "dependencies": {
    "@elysiajs/cors": "1.3.3",
    "@elysiajs/eden": "1.3.2",
    "@elysiajs/server-timing": "1.3.0",
    "@elysiajs/swagger": "1.3.0",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "@tqman/nice-logger": "1.1.1",
    "@repo/shared": "workspace:*",
    "bcryptjs": "3.0.2",
    "consola": "3.4.2",
    "cronbake": "0.1.2",
    "drizzle-orm": "0.44.2",
    "elysia": "1.4.7",
    "elysia-http-status-code": "1.0.9",
    "elysia-ip": "1.0.10",
    "elysia-rate-limit": "4.4.0",
    "gramio": "0.4.9",
    "ioredis": "5.6.1",
    "ky": "1.11.0",
    "kysely": "0.28.2",
    "kysely-bun-sqlite": "0.4.0",
    "kysely-paginate": "0.3.1",
    "lz-string": "1.5.0",
    "mysql2": "3.14.1",
    "nanoid": "5.1.5",
    "nats": "2.29.3",
    "pg": "8.13.1",
    "minio": "8.0.5",
    "dayjs": "1.11.11",
    "sharp": "0.34.2",
    "transliteration": "2.3.5",
    "ua-parser-js": "2.0.4",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@repo/config-biome": "workspace:*",
    "@types/pg": "8.11.10",
    "bun-types": "1.2.17",
    "drizzle-kit": "0.31.4",
    "typescript": "5.8.3"
  }
}