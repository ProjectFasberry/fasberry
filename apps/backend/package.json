{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun run dist/index.js",
    "build": "NODE_ENV=production bun run build.ts",
    "build:c": "NODE_ENV=production bun build src/index.ts --compile --external=pg --minify-whitespace --minify-syntax --target=bun --outfile=./dist/server",
    "type-check": "tsc --noEmit",
    "lint": "bunx biome lint",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio --verbose --port 5000",
    "db:pull": "bunx drizzle-kit pull",
    "db:push": "bunx drizzle-kit push"
  },
  "dependencies": {
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/openapi": "1.4.11",
    "@elysiajs/server-timing": "1.4.0",
    "@nats-io/jetstream": "3.2.0",
    "@nats-io/nats-core": "3.2.0",
    "@nats-io/transport-node": "3.2.0",
    "@oslojs/crypto": "1.0.1",
    "@oslojs/encoding": "1.1.0",
    "@repo/shared": "workspace:*",
    "@tqman/nice-logger": "1.1.1",
    "bcryptjs": "3.0.2",
    "consola": "3.4.2",
    "croner": "9.1.0",
    "dayjs": "1.11.11",
    "drizzle-orm": "0.44.2",
    "elysia": "1.4.7",
    "elysia-http-status-code": "1.0.9",
    "elysia-ip": "1.0.10",
    "elysia-prometheus": "1.0.0",
    "elysia-rate-limit": "4.4.0",
    "gramio": "0.4.9",
    "heleket-api-sdk": "3.0.0",
    "ioredis": "5.6.1",
    "ky": "1.14.0",
    "kysely": "0.28.2",
    "kysely-bun-sqlite": "0.4.0",
    "kysely-paginate": "0.3.1",
    "minio": "8.0.5",
    "mysql2": "3.14.1",
    "nanoid": "5.1.5",
    "p-limit": "7.1.1",
    "pg": "8.13.1",
    "sharp": "0.34.2",
    "ua-parser-js": "2.0.4",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@repo/config-biome": "workspace:*",
    "@types/pg": "8.11.10",
    "bun-types": "1.2.17",
    "bun-plugin-dts": "0.3.0",
    "drizzle-kit": "0.31.4",
    "typescript": "5.8.3"
  }
}
